{
    "env": {
        "browser": true,
        "es6": true
    },
    "plugins": [
        "flowtype"
    ],
    "extends": [
        "airbnb",
        "plugin:flowtype/recommended"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "rules": {
        "semi": [
            "error",
            "never"
        ],
        "react/state-in-constructor": [
            1,
            "never"
        ],
        "no-console": [
            "error"
        ],
        "constructor-super": [
            2
        ]
    },
    "parser": "babel-eslint"
}